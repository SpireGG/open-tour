doctype html
html(lang="fr")
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='csrf-token', content=_csrf)
    title #{title} - OpenTour Live
    link(rel='shortcut icon', href='/favicon.png')
    link(rel='stylesheet', href='/css/main.css')
    script(src='//embed.twitch.tv/embed/v1.js')

  body
    #app
      include partials/header

      .container
        include partials/flash
        block content

      include partials/footer

    script(src='/js/lib/jquery.min.js')
    script(src='/js/lib/popper.min.js')
    script(src='/js/lib/bootstrap.min.js')
    script(src='//cdn.jsdelivr.net/npm/vue/dist/vue.js')
    script(src='/js/main.js')
    script(src='https://www.googletagmanager.com/gtag/js?id=UA-115209665-8', async)
    script.
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'UA-115209665-8');
